<block>
  <name>PSK31 Modulator</name>
  <key>psk31_modulator_bc</key>
  <category>[Radioteletype]</category>
  <import>from radioteletype.modulators import psk31_modulator_bc</import>
  <make>psk31_modulator_bc(
    samp_per_sym=$samp_per_sym,
)</make>
  <callback>set_samp_per_sym($samp_per_sym)</callback>
  <param>
    <name>Samples per Symbol</name>
    <key>samp_per_sym</key>
    <value>samp_per_sym</value>
    <type>raw</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
    <vlen>1</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>1</vlen>
  </source>
</block>
